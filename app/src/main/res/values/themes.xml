<resources>
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/navy_700</item>
        <item name="colorPrimaryVariant">@color/navy_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/navy_900</item>

        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
        +
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_mono_medium</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/roboto_mono</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout" />

    <style name="Theme.DoINeedIt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DoINeedIt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DoINeedIt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>